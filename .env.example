# Database (Turso)
DATABASE_URL=libsql://your-database.turso.io
DATABASE_AUTH_TOKEN=your_auth_token_here

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET=your_super_secret_jwt_key_here

# Admin Credentials
ADMIN_EMAIL=admin@nexusstudio.com
ADMIN_PASSWORD=your_super_secure_admin_password

# Admin API Key (generate with: openssl rand -hex 32)
ADMIN_KEY=your_admin_api_key_here

# Environment
NODE_ENV=production
PORT=3000

# Rate Limiting (optional, defaults below)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Reset Database (DANGER: set to true to reset DB on startup)
RESET_DB=false